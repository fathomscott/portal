{% extends '@Admin/layout.html.twig' %}

{% block title %}{{ 'navigation.email.emails'|trans }}{% endblock %}

{% block breadcrumb %}
    <li class="active">{{ 'navigation.email.emails'|trans }}</li>
{% endblock %}

{% block content %}
    <table id="data-table" class="table table-striped table-bordered dataTable no-footer dtr-inline list-table">
        <thead>
            <tr>
                <th class="{{ 'a.id'|sort_class }}">{{ knp_pagination_sortable(emails, 'labels.id'|trans(), 'a.id') }}</th>
                <th class="{{ 'a.from'|sort_class }}">{{ knp_pagination_sortable(emails, 'labels.from'|trans(), 'a.from') }}</th>
                <th class="{{ 'a.to'|sort_class }}">{{ knp_pagination_sortable(emails, 'labels.to'|trans(), 'a.to') }}</th>
                <th class="{{ 'a.subject'|sort_class }}">{{ knp_pagination_sortable(emails, 'labels.subject'|trans(), 'a.subject') }}</th>
                <th class="{{ 'a.created'|sort_class }}">{{ knp_pagination_sortable(emails, 'labels.created'|trans(), 'a.created') }}</th>
                <th>{{ 'labels.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for email in emails %}
                <tr>
                    <td>{{ email.id }}</td>
                    <td>{{ email.from }}</td>
                    <td>{{ email.to }}</td>
                    <td>{{ email.subject }}</td>
                    <td>{{ email.created|date }}</td>
                    <td>
                        <div class="btn-group">
                            <a href="javascript:;" data-toggle="dropdown" class="btn btn-sm btn-info dropdown-toggle" aria-expanded="false">
                                {{ 'labels.actions'|trans }} <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="{{ path('admin_email_view', {'email' : email.id}) }}">{{ 'verb.view'|trans }}</a></li>
                            </ul>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <div class="col-md-5 media-middle"><p><strong>{{ 'labels.total_results'| trans }}:</strong> {{ total }}</p></div>
    <div class="col-md-7 text-right">{{ knp_pagination_render(emails) }}</div>
{% endblock content %}
{% extends '@Admin/layout.html.twig' %}

{% form_theme form '@Admin/form_theme.html.twig' %}

{% block title %}{{ 'navigation.manage'|trans }} {{ 'navigation.team.team'|trans }}{% endblock %}

{% block breadcrumb %}
    <li><a href="{{ path('admin_agent_team_index') }}">{{ 'navigation.team.teams'|trans }}</a></li>
    <li class="active">{{ 'navigation.manage'|trans }} {{ 'navigation.team.team'|trans }}</li>
{% endblock %}

{% block content %}
    {% if not isNew %}
        {{ include('@Admin/AgentTeam/helpers/menu.html.twig') }}
    {% endif %}
    {{ form_start(form) }}
        {% for field in form %}
            {{ form_row(field) }}
        {% endfor %}

        {# buttons #}
        <div class="buttons col-md-offset-3 m-t-10">
            <button type="submit" class="btn btn-warning m-r-10">{{ 'verb.submit'|trans }}</button>
            <a href="{{ path('admin_agent_team_index') }}" class="btn btn-info">{{ 'navigation.back_to_list'|trans }}</a>

            {% if not isNew %}
                <a href="{{ path('admin_agent_team_delete', {'team': team.id}) }}" class="btn btn-danger confirm-delete">{{ 'verb.delete'|trans }}</a>
                {{ include('@Admin/helpers/confirm_modal.html.twig') }}
            {% endif %}
        </div>
    {{ form_end(form) }}

{% endblock content %}

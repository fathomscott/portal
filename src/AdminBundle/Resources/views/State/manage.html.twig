{% extends '@Admin/layout.html.twig' %}

{% form_theme form '@Admin/form_theme.html.twig' %}

{% block title %}{{ 'verb.edit'|trans }} {{ 'navigation.state.state'|trans }}{% endblock %}

{% block breadcrumb %}
    <li><a href="{{ path('admin_state_index') }}">{{ 'navigation.state.states'|trans }}</a></li>
    <li class="active">{{ 'navigation.manage'|trans }} {{ 'navigation.state.state'|trans }}</li>
{% endblock %}

{% block content %}
   {{ form_start(form) }}
       {% for field in form %}
          {{ form_row(field) }}
       {% endfor %}

       {# buttons #}
       <div class="buttons col-md-offset-3 m-t-10">
          <button type="submit" class="btn btn-warning m-r-10">{{ 'verb.submit'|trans }}</button>
          <a href="{{ path('admin_state_index') }}" class="btn btn-info">{{ 'navigation.back_to_list'|trans }}</a>

          {% if not isNew %}
              <a href="{{ path('admin_state_delete', {'state': state.id}) }}" class="confirm-delete btn btn-danger">{{ 'verb.delete'|trans }}</a>
              {{ include('@Admin/helpers/confirm_modal.html.twig') }}
          {% endif %}
       </div>
   {{ form_end(form) }}

{% endblock content %}
{% extends '@Admin/layout.html.twig' %}

{% block title %}{{ 'navigation.state.states'|trans }}{% endblock %}

{% block breadcrumb %}
    <li class="active">{{ 'navigation.state.states'|trans }}</li>
{% endblock %}

{% block content %}
    <a class="pull-right btn btn-primary m-b-10" href="{{ path('admin_state_add') }}">+ {{ 'verb.add'|trans }}</a>
    <table id="data-table" class="table table-striped table-bordered dataTable no-footer dtr-inline list-table">
        <thead>
            <tr>
                <th class="{{ 'a.id'|sort_class }}">{{ knp_pagination_sortable(states, 'labels.id'|trans(), 'a.id') }}</th>
                <th class="{{ 'a.name'|sort_class }}">{{ knp_pagination_sortable(states, 'labels.name'|trans(), 'a.name') }}</th>
                <th class="{{ 'a.code'|sort_class }}">{{ knp_pagination_sortable(states, 'labels.code'|trans(), 'a.code') }}</th>
               <th>{{ 'labels.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for state in states %}
                <tr>
                    <td>{{ state.id }}</td>
                    <td>{{ state.name }}</td>
                    <td>{{ state.code }}</td>
                    <td>
                        <div class="btn-group">
                            <a href="javascript:;" data-toggle="dropdown" class="btn btn-sm btn-info dropdown-toggle" aria-expanded="false">
                                {{ 'labels.actions'|trans }} <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="{{ path('admin_state_edit', {'state' : state.id}) }}">{{ 'verb.edit'|trans }}</a></li>
                            </ul>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <div class="col-md-5 media-middle"><p><strong>{{ 'labels.total_results'| trans }}:</strong> {{ total }}</p></div>
    <div class="col-md-7 text-right">{{ knp_pagination_render(states) }}</div>
{% endblock content %}
<h2>{{ user.fullName }}</h2>
<table id="data-table" class="table table-striped table-bordered dataTable no-footer dtr-inline">
    <thead>
        <tr>
            <th>{{ 'labels.agent'|trans }}</th>
            <th>{{ 'labels.email'|trans }}</th>
            <th>{{ 'labels.date_joined'|trans }}</th>
        </tr>
    </thead>
    <tbody>
        {% for referral in referralUsers %}
            <tr>
                <td>
                    <a href="{{ path('admin_agent_view', {'agent': referral.id}) }}">
                        {{ referral.firstName ~ ' ' ~ referral.lastName }}
                    </a>
                </td>
                <td>
                    <a href="mailto: {{ referral.email }}">
                        {{ referral.email }}
                    </a>
                </td>
                <td>{{ referral.created|date }}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
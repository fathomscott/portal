{% extends '@Admin/layout.html.twig' %}

{% block title %}{{ 'navigation.license_category.license_categories'|trans }}{% endblock %}

{% block breadcrumb %}
    <li class="active">{{ 'navigation.license_category.license_categories'|trans }}</li>
{% endblock %}

{% block content %}
    <a class="pull-right btn btn-primary m-b-10" href="{{ path('admin_license_category_add') }}">+ {{ 'verb.add'|trans }}</a>
    <table id="data-table" class="table table-striped table-bordered dataTable no-footer dtr-inline list-table">
        <thead>
            <tr>
                <th class="{{ 'a.id'|sort_class }}">{{ knp_pagination_sortable(licenseCategories, 'labels.id'|trans(), 'a.id') }}</th>
                <th class="{{ 'a.name'|sort_class }}">{{ knp_pagination_sortable(licenseCategories, 'labels.name'|trans(), 'a.name') }}</th>
                <th>{{ 'labels.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for licenseCategory in licenseCategories %}
                <tr>
                    <td>{{ licenseCategory.id }}</td>
                    <td>{{ licenseCategory.name }}</td>
                    <td>
                        <div class="btn-group">
                            <a href="javascript:;" data-toggle="dropdown" class="btn btn-sm btn-info dropdown-toggle" aria-expanded="false">
                                {{ 'labels.actions'|trans }} <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="{{ path('admin_license_category_edit', {'licenseCategory' : licenseCategory.id}) }}">{{ 'verb.edit'|trans }}</a></li>
                                <li><a class="confirm-delete" href="{{ path('admin_license_category_delete', {'licenseCategory' : licenseCategory.id}) }}">{{ 'verb.delete'|trans }}</a></li>
                            </ul>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <div class="col-md-5 media-middle"><p><strong>{{ 'labels.total_results'| trans }}:</strong> {{ total }}</p></div>
    <div class="col-md-7 text-right">{{ knp_pagination_render(licenseCategories) }}</div>

    {{ include('@Admin/helpers/confirm_modal.html.twig') }}
{% endblock content %}
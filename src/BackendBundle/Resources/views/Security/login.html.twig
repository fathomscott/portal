{% extends '@Backend/security_layout.html.twig' %}

{% block title %}{{ 'general.company_name'|trans }}{% endblock %}

{% block content %}
    <form action="{{ path('backend_login') }}" method="POST" class="margin-bottom-0">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
        <div class="form-group m-b-20">
            <input type="email" name="_username" class="form-control input-lg" placeholder="{{ 'labels.email_address'|trans }}" required />
        </div>
        <div class="form-group m-b-20">
            <input type="password" name="_password" class="form-control input-lg" placeholder="{{ 'labels.password'|trans }}" required />
        </div>
        <div class="checkbox m-b-20">
            <label>
                <input type="checkbox" name="_remember_me" /> {{ 'labels.remember_me'|trans }}
            </label>
        </div>
        <div class="login-buttons">
            <button type="submit" class="btn btn-success btn-block btn-lg">{{ 'labels.sign_me_in'|trans }}</button>
        </div>
        <div class="m-t-20 text-center"><a href="{{ path('backend_forgot_password') }}">{{ 'navigation.forgot_password'|trans }}?</a></div>
    </form>
{% endblock %}
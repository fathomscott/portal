{% extends "BackendBundle:Mail:base.html.twig" %}
{% block subject %}
Password Reset Successfully
{% endblock %}

{% block body_text %}
{% autoescape false %}
{{ firstName }},
Your password has been reset successfully.

If you did not change your password, please contact us immediately.

Thank you,
{{ signature }}
{% endautoescape %}
{% endblock %}

{% block html_message %}
{{ firstName }},
<br />
Your password has been reset successfully.
<br /><br />
If you did not change your password, please contact us immediately.
<br /><br />
Thank you,
<br />
{{ signature }}
{% endblock %}
